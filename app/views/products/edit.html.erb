<h2>Edit Product</h2>

<%= link_to "Back", resource(@product) %>

<%= form_for(@product, :action => resource(@product)) do %>
  
  <h3>Details</h3>
  <p>
    <%= text_field :name, :label => "Name" %>
  </p>
  <p>
    <%= text_field :sku, :label => "SKU" %>
  </p>
  
  <h3>Inventory</h3>
  <p>
    <%= text_field :inventory, :label => "Current Quantity" %>
  </p>
  
  <h3>Location</h3>
  <p>
    <%= text_field :aisle, :label => "Aisle" %>
  </p>
  <p>
    <%= text_field :bin, :label => "Bin" %>
  </p>
  
  <p>
    <%= submit "Save" %>
  </p>
  
<% end =%>
